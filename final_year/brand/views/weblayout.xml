<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="kola_web_layout" name="Kola Web layout" inherit_id="web.layout">
        <!--        Replace Odoo title-->
        <xpath expr="//title" position="replace">
            <title t-esc="title or 'AUTO CAR'" />
        </xpath>
        <!--            Replace Odoo favicon-->
        <xpath expr="//link[@rel='shortcut icon']" position="replace">
            <link type="image/x-icon" rel="shortcut icon" t-att-href="x_icon or '/brand/static/src/img/favicon.ico'" />
        </xpath>
    </template>

    <template id="web_remove_powered_by_odoo" name="Remove Powered" inherit_id="web.login_layout">
        <!--Remove Powered By Odoo-->
        <xpath expr="//div[hasclass('text-center', 'small', 'mt-4', 'pt-3', 'border-top')]" position="replace">
            
        </xpath>        
    </template>

    <!--Remove Log in as super user option-->
    <template id="kola_web_login_inherit" name="template_name" inherit_id="web.login">
        <xpath expr="//button[hasclass('btn','btn-link', 'btn-sm','btn-block')]" position="replace"></xpath>
    </template>

</odoo>