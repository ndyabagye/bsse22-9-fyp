<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--===============PRODUCT SEARCH===================-->
    <record id="product_search" model="ir.ui.view"> 
        <field name="name">product.search</field>
        <field name="model">product</field> 
        <field name="arch" type="xml">
            <search string="Product"> 
                <field name="brand_id" string ="Brand"/>
                <field name="car_model_id" string ="Model"/>            
            </search>
        </field>
    </record>

    <!--===============PRODUCT FORM VIEW===================-->
    <record id="product_form" model="ir.ui.view">
        <field name="name">product.form</field>
        <field name="model">product</field>
        <field name="arch" type="xml">
            <form string="Product">
                <sheet>
                    <field name="image" widget="image" class="oe_avatar" options="{'preview_image': 'image'}"/>
                    <div class="oe_title">
                        <h1><field name="name"/></h1> 
                    </div>
                    <group string = "Product Information">
                        <group>
                            <field name="category_id" string ="Category"/>
                            <field name="brand_id" string ="Brand"/>
                            <field name="car_model_id" string ="Model"
                                 domain= "[('brand_id', '=', brand_id)]"
                            />
                            <field name="vendor_id" string ="Vendor"/>
                            <field name="status" string ="Status" widget="boolean_toggle"/>
                        </group>
                        <group>
                            <field name="transmission" string ="Transmission"/>
                            <field name="mileage" string ="Mileage"/>
                            <field name="year" string ="Year of Make"/>
                            <field name="hp" string ="Horsepower"/>
                            <field name="offer_type" string ="OfferType"/>
                            <field name="fuel" string ="Fuel"/> 
                        </group>
                    </group>
                    <group string = "Pricing Information">
                        <group>
                            <field name="base_price" string ="Base Price"/>
                            <field name="selling_price" string ="Selling Price"/>
                            <button 
                                name="predict_price"  
                                string="Predict Price" 
                                type="object" 
                                class="oe_highlight" 
                                data-hotkey="g"/>
                    

                        </group>
                        <group>
                            <field name="profit" string ="Profit" 
                            readonly="1"
                            />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--===============PRODUCT TREE VIEW===================-->
    <record id="product_tree" model="ir.ui.view">
        <field name="name">product.tree</field>
        <field name="model">product</field>
        <field name="arch" type="xml">
            <tree string="Product">
                <field name="image" widget="image" width="100" height="100"/>
                <field name="brand_id" string ="Brand"/>
                <field name="car_model_id" string ="Model"/>
                <field name="vendor_id" string ="Vendor"/>
                <field name="transmission" string ="Transmission"/>
                <field name="mileage" string ="Mileage"/>
                <field name="year" string ="Year of Make"/>
                <field name="status" string ="Status" widget="boolean_toggle"/> 
            </tree>
        </field>
    </record>

    <!--===========================PRODUCT STATUS ACTION WINDOW========================-->
    <record id="product_action" model="ir.actions.act_window">
        <field name="name">Product</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product</field>
        <field name="view_mode">tree,form,search</field> 
        <field name="search_view_id" ref="product_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Product
            </p>
        </field>
    </record>

</odoo>