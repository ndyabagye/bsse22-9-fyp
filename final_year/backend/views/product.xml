<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--===============PRODUCT SEARCH===================-->
    <record id="product_search" model="ir.ui.view"> 
        <field name="name">product.search</field>
        <field name="model">product</field> 
        <field name="arch" type="xml">
            <search string="Product"> 
                <field name="brand_id" string ="Brand"/>
                <field name="car_model_id" string ="Model"/>            
            </search>
        </field>
    </record>

    <!--===============PRODUCT FORM VIEW===================-->
    <record id="product_form" model="ir.ui.view">
        <field name="name">product.form</field>
        <field name="model">product</field>
        <field name="arch" type="xml">
            <form string="Product">
                <field name="x_css" force_save="1" nolabel="1"/>
                <sheet>
                    <field name="image" widget="image" class="oe_avatar" options="{'preview_image': 'image'}"/>
                    <div class="oe_title">
                        <h1><field name="name"/></h1> 
                    </div>
                    <group string = "Product Information">
                        <group>
                            <field name="category_id" string ="Category" 
                                required ="1"
                                options="{'no_open':True,'no_quick_create':True,'no_create': True, 'no_create_edit':True}" 
                            />
                            <field name="brand_id" string ="Brand"
                                required ="1" 
                                options="{'no_open':True,'no_quick_create':True,'no_create': True, 'no_create_edit':True}" />
                            <field name="car_model_id" string ="Model"
                                domain= "[('brand_id', '=', brand_id)]"
                                required ="1"
                                options="{'no_open':True,'no_quick_create':True,'no_create': True, 'no_create_edit':True}" 
                            />
                            <field name="vendor_id" string ="Vendor"
                                required ="1"
                                attrs="{'invisible': [('scraped', '=', True)]}"   
                                options="{'no_open':True,'no_quick_create':True,'no_create': True, 'no_create_edit':True}" 
                            />
                            <field name="status" string ="Status" widget="boolean_toggle" attrs="{'invisible': [('scraped', '=', True)]}"/>
                        </group>
                        <group>
                            <field name="transmission" required ="1" string ="Transmission"/>
                            <field name="mileage" required ="1" string ="Mileage" attrs="{'invisible': [('scraped', '=', True)]}"/>
                            <field name="year" string ="Year of Make" required="1"/>
                            <field name="hp" string ="Horsepower" required ="1" attrs="{'invisible': [('scraped', '=', True)]}"/>
                            <field name="offer_type" string ="OfferType" required ="1"/>
                            <field name="fuel" string ="Fuel" required ="1"/> 
                        </group>
                    </group>
                    <group string = "Pricing Information" attrs="{'invisible': [('scraped', '=', True)]}">
                        <group>
                            <field name="predicted_price" force_save="1"/>
                            <field name="selling_price" string ="Selling Price (Display Price)"/>
                            <field name="base_price" string ="Base Price(Last Price)"/>
                            <button 
                                name="predict_price"  
                                string="Predict Price" 
                                type="object" 
                                class="oe_highlight" 
                                data-hotkey="g"/>

                        </group>
                        <group>
                            <field name="profit" string ="Profit" 
                            readonly="1"
                            />
                        </group>
                    </group>

                    <group attrs="{'invisible': [('scraped', '=', False)]}">
                        <group>
                            <button 
                                name="scrape_price"  
                                string="Scrape" 
                                type="object" 
                                class="oe_highlight" 
                                data-hotkey="g"/>
                        </group>
                        <group>
                    
                        </group>
                    </group>
                    <field name ="scraped" invisible="1"/>
                    <notebook attrs="{'invisible': [('scraped', '=', False)]}">
                        <page string="Scraped Prices">
                            <field name="scraped_price_lines_ids">
                                <tree editable="bottom" create="false">
                                    <field name="source" force_save="1"/>
                                    <field name="price" force_save="1"/>
                                    <field name="number_scraped" force_save="1"/>
                                    <field name="create_date" string ="Scraped on" force_save="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!--===============PRODUCT TREE VIEW===================-->
    <record id="product_tree" model="ir.ui.view">
        <field name="name">product.tree</field>
        <field name="model">product</field>
        <field name="arch" type="xml">
            <tree string="Product">
                <field name="image" widget="image" width="100" height="100"/>
                <field name="brand_id" string ="Brand"/>
                <field name="car_model_id" string ="Model"/>
                <field name="vendor_id" string ="Vendor"/>
                <field name="transmission" string ="Transmission"/>
                <field name="mileage" string ="Mileage"/>
                <field name="year" string ="Year of Make"/>
                <field name="scraped" invisible="1"/>
                <field name="status" string ="Status" widget="boolean_toggle" attrs="{'invisible': [('scraped', '=', True)]}"/> 
            </tree>
        </field>
    </record>

    <!--===========================PRODUCT STATUS ACTION WINDOW========================-->
    <record id="product_action" model="ir.actions.act_window">
        <field name="name">Product</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product</field>
        <field name="view_mode">tree,form,search</field> 
        <field name="search_view_id" ref="product_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Product
            </p>
        </field>
    </record>

</odoo>