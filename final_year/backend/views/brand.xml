<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--===============BRAND SEARCH===================-->
    <record id="brand_search" model="ir.ui.view"> 
        <field name="name">brand.search</field>
        <field name="model">brand</field> 
        <field name="arch" type="xml">
            <search string="Brand"> 
                <field name="name" string ="Name"/>
                <field name="description" string ="Description"/>
            </search>
        </field>
    </record>

    <!--===============BRAND FORM VIEW===================-->
    <record id="brand_form" model="ir.ui.view">
        <field name="name">brand.form</field>
        <field name="model">brand</field>
        <field name="arch" type="xml">
            <form string="Brand">
                <sheet>

                    <field name="brand_logo" widget="image" class="oe_avatar" options="{'preview_image': 'brand_logo'}"/>
                    <div class="oe_title">
                        <h1><field name="name"/></h1> 
                    </div>
                    <group>
                        <group>
                            <field name="slug"/>
                            <field name="description" placeholder="Provide a brief description of the Brand"/>
                        </group>
                        <group>
                        
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--===============BRAND TREE VIEW===================-->
    <record id="brand_tree" model="ir.ui.view">
        <field name="name">brand.tree</field>
        <field name="model">brand</field>
        <field name="arch" type="xml">
            <tree string="Brand">
                <field name="brand_logo" widget="image"/>
                <field name="name"/>
                <field name="description" string ="Description"/>
            </tree>
        </field>
    </record>

    <!--===========================BRAND STATUS ACTION WINDOW========================-->
    <record id="brand_action" model="ir.actions.act_window">
        <field name="name">Brand</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">brand</field>
        <field name="view_mode">tree,form,search</field> 
        <field name="search_view_id" ref="brand_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Brand
            </p>
        </field>
    </record>

</odoo>