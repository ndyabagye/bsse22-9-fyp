<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--===============ORDER SEARCH===================-->
    <record id="order_search" model="ir.ui.view"> 
        <field name="name">order.search</field>
        <field name="model">order</field> 
        <field name="arch" type="xml">
            <search string="Order"> 
                <field name="code"/>
                <field name="product_id"  
                    options="{'no_open':True,'no_quick_create':True,'no_create': True, 'no_create_edit':True}" />
                <field name="name" string ="Name"/>
                <field name="email" string ="Email"/>
                <field name="phone" string ="Phone"/>
                <field name="address" string ="Address"/>
                <field name="vendor_id"/>            
            </search>
        </field>
    </record>

    <!--===============ORDER FORM VIEW===================-->
    <record id="order_form" model="ir.ui.view">
        <field name="name">order.form</field>
        <field name="model">order</field>
        <field name="arch" type="xml">
            <form string="Order">
                <header>
                    <button name="action_set_to_delivered" states="ordered" string="Confirm Delivery" type="object" class="oe_highlight" data-hotkey="g" confirm = "Are you sure you want to confirm Delivery?"/>
                    <button name="action_set_to_returned" states="ordered" string="Confirm Car Return" type="object" class="btn_danger" data-hotkey="g" confirm = "Are you sure you want to confirm Return?"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <field name="image" widget="image" class="oe_avatar" options="{'preview_image': 'image'}"/>
                    <div class="oe_title">
                        <h1><field name="code" /></h1> 
                    </div>
                    <group string = "Order Information">
                        <group>
                            <field name="product_id"/>
                            <field name="name" string ="Name"/>
                        </group>
                        <group>
                            <field name="email" string ="Email"/>
                            <field name="phone" string ="Phone"/>
                            <field name="address" string ="Address"/>
                            <field name="vendor_id"/> 
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--===============ORDER TREE VIEW===================-->
    <record id="order_tree" model="ir.ui.view">
        <field name="name">order.tree</field>
        <field name="model">order</field>
        <field name="arch" type="xml">
            <tree string="Order">
                <field name="image" widget="image"/>
                <field name="code"/>
                <field name="product_id"/>
                <field name="name" string ="Name"/>
                <field name="email" string ="Email"/>
                <field name="phone" string ="Phone"/>
                <field name="address" string ="Address"/>
                <field name="vendor_id"/>
            </tree>
        </field>
    </record>

    <!--===========================ORDER STATUS ACTION WINDOW========================-->
    <record id="order_action" model="ir.actions.act_window">
        <field name="name">Order</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">order</field>
        <field name="view_mode">tree,form,search</field> 
        <field name="search_view_id" ref="order_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Order
            </p>
        </field>
    </record>

</odoo>